<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/list', user: @user, book: @new_book %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
              <%= attachment_image_tag @user, :profile_image_id, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %><br />
              <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %>
              <%= @book.title %>
              <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <% if @user.id == current_user.id %>
            <td>
              <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger" %>
            </td>
            <% else %>
            <td></td>
            <td></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
